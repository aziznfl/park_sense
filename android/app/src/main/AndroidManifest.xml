<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.my.aziznfl.park_sense">

    <application
        android:name="${applicationName}"
        android:label="park_sense"
        android:icon="@mipmap/ic_launcher">

        <!-- ========================= -->
        <!-- PHONE ENTRY POINT (Flutter) -->
        <!-- ========================= -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="
                orientation|keyboardHidden|keyboard|
                screenSize|smallestScreenSize|
                locale|layoutDirection|
                fontScale|screenLayout|density|uiMode">

            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Required by Flutter -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />

        <!-- ========================= -->
        <!-- ANDROID AUTO / AAOS METADATA -->
        <!-- ========================= -->

        <!-- Tells Google this app supports car -->
        <meta-data
            android:name="com.google.android.gms.car.application"
            android:resource="@xml/automotive_app_desc" />

        <!-- ========================= -->
        <!-- CAR ENTRY POINT (NO ACTIVITY) -->
        <!-- ========================= -->
        <service
            android:name=".car.media.AutoMediaService"
            android:exported="true"
            android:enabled="true"
            android:permission="android.permission.BIND_MEDIA_BROWSER_SERVICE">

            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
            </intent-filter>

            <!-- tell AA this is a media app -->
            <meta-data
                android:name="androidx.car.app.category"
                android:value="media" />

            <!-- minimum API level -->
            <meta-data
                android:name="androidx.car.app.minCarApiLevel"
                android:value="1" />
        </service>
    </application>

</manifest>